#!/usr/bin/env bash
## starphleet-status 0.1.0
### Usage:
###    starphleet-status
### --help
###
### Dump out handy statistics
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source ${DIR}/tools
help=$(grep "^### " "$0" | cut -c 5-)
version=$(grep "^## "  "$0" | cut -c 4-)
eval "$(${DIR}/docopts -h "$help" -V "$version" : "$@")"

FREE_CPU=$(mpstat | grep all | awk '{ print $12 }')
FREE_RAM=$(free | grep Mem | awk '{ print (1 - ($3 / $2)) * 100 }')
FREE_DISK=$(df /var/lib/lxc | tail -1 | awk '{ print 100 - $5 }')

cat << EOF >> /dev/stdout
free_ram: ${FREE_RAM}
free_cpu: ${FREE_CPU}
free_disk: ${FREE_DISK}
EOF

test -f /var/starphleet/.headquarters && source /var/starphleet/.headquarters

cat << EOF >> /dev/stdout
headquarters: ${HEADQUARTERS_REMOTE:-no headquarters}
EOF

if [ -d "${CURRENT_ORDERS}" ]; then
cat << EOF >> /dev/stdout
status: online
EOF
else
cat << EOF >> /dev/stdout
status: offline
EOF
exit 0
fi

for status in $(find "${CURRENT_ORDERS}" -name '*.starphleetstatus')
do
  ORDER=$(dirname ${status} | sed -e "s[${CURRENT_ORDERS}[[")
  cd "$(dirname "${status}")/git"
  SHA=$(git log -1 --format='%h')
  AT=$(git log -1 --format='%at')
  AUTHOR=$(git log -1 --format='%ae')
  TEXT=$(git log -1 --format='%s')
cat << EOF >> /dev/stdout
orders:
  -
    order: ${ORDER}
    sha: ${SHA}
    at: ${AT}
    author: ${AUTHOR}
    text: ${TEXT}
    status: $(cat "${status}")
EOF
done
